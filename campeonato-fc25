<script>
function updateGroup(group) {
  let equipos = group === 'A' ? ['A1', 'A2', 'A3'] : ['B1', 'B2', 'B3'];
  let resultados = [
    [equipos[0], equipos[1], +document.getElementById(`${equipos[0]}_${equipos[1]}_H`).value || 0, +document.getElementById(`${equipos[0]}_${equipos[1]}_A`).value || 0],
    [equipos[0], equipos[2], +document.getElementById(`${equipos[0]}_${equipos[2]}_H`).value || 0, +document.getElementById(`${equipos[0]}_${equipos[2]}_A`).value || 0],
    [equipos[1], equipos[2], +document.getElementById(`${equipos[1]}_${equipos[2]}_H`).value || 0, +document.getElementById(`${equipos[1]}_${equipos[2]}_A`).value || 0],
  ];

  let tabla = {};
  equipos.forEach(e => tabla[e] = { pts: 0, gf: 0, gc: 0 });

  resultados.forEach(([loc, vis, gl, gv]) => {
    tabla[loc].gf += gl;
    tabla[loc].gc += gv;
    tabla[vis].gf += gv;
    tabla[vis].gc += gl;

    if (gl > gv) tabla[loc].pts += 3;
    else if (gl < gv) tabla[vis].pts += 3;
    else {
      tabla[loc].pts += 1;
      tabla[vis].pts += 1;
    }
  });

  let rows = Object.entries(tabla).map(([eq, val]) => {
    let dg = val.gf - val.gc;
    return { eq, ...val, dg };
  });

  rows.sort((a, b) => b.pts - a.pts || b.dg - a.dg || b.gf - a.gf);

  let tbody = document.querySelector(`#tabla${group} tbody`);
  tbody.innerHTML = '';
  rows.forEach(team => {
    tbody.innerHTML += `<tr><td>${team.eq}</td><td>${team.pts}</td><td>${team.gf}</td><td>${team.gc}</td><td>${team.dg}</td></tr>`;
  });
}
</script>

